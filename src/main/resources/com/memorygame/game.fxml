<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.memorygame.GameController"
           prefWidth="800" prefHeight="600"
           style="-fx-background-color: linear-gradient(to bottom, #1e3c72, #2a5298);">

    <VBox alignment="CENTER" spacing="20">
        <Label fx:id="timerLabel" text="Time: 0"
               style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;" />
        <GridPane fx:id="grid" hgap="10" vgap="10" />
    </VBox>
</StackPane>
