<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.memorygame.LevelController"
           style="-fx-background-color: linear-gradient(to bottom, #0f2027, #203a43, #2c5364);"
           prefWidth="800" prefHeight="600">

    <VBox alignment="CENTER" spacing="20">
        <Button text="Easy (4x4)" onAction="#selectEasy"
                style="-fx-font-size: 16px; -fx-background-color: #5dade2; -fx-text-fill: white; -fx-padding: 10px 20px;" />
        <Button text="Medium (5x5)" onAction="#selectMedium"
                style="-fx-font-size: 16px; -fx-background-color: #48c9b0; -fx-text-fill: white; -fx-padding: 10px 20px;" />
        <Button text="Hard (6x6)" onAction="#selectHard"
                style="-fx-font-size: 16px; -fx-background-color: #f5b041; -fx-text-fill: white; -fx-padding: 10px 20px;" />
    </VBox>
</StackPane>
